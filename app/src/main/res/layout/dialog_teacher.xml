<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ETfirstNTEdit"
        android:layout_width="376dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:hint="First name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETidT" />

    <EditText
        android:id="@+id/ETidT"
        android:layout_width="376dp"
        android:layout_height="44dp"
        android:layout_marginTop="148dp"
        android:hint="ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ETlastNTEdit"
        android:layout_width="376dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:hint="Last name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETfirstNTEdit" />

    <EditText
        android:id="@+id/ETgenderTEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETlastNTEdit"
        android:layout_width="376dp"
        android:layout_height="44dp"
        android:hint="Gender"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="270dp" />

    <EditText
        android:id="@+id/ETphoneTeach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETgenderTEdit"
        android:layout_width="376dp"
        android:layout_height="44dp"
        android:hint="Telephone"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="333dp" />

    <EditText
        android:id="@+id/ETemailTEdit"
        android:layout_width="376dp"
        android:layout_height="44dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETphoneTeach" />

    <Spinner
        android:id="@+id/spinnerEditT"
        android:layout_width="367sp"
        android:layout_height="44dp"
        android:entries="@array/subjects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ETemailTEdit" />

    <Button
        android:id="@+id/btnDeleteT"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="36dp"
        android:text="Delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerEditT" />

    <Button
        android:id="@+id/btnSaveT"
        android:layout_width="145sp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="Save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerEditT" />

</androidx.constraintlayout.widget.ConstraintLayout>
